<Window x:Class="Do_An.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập - StarEnglish" 
        Height="520" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F3F6F8"
        ResizeMode="CanResize">

    <Viewbox Stretch="Uniform" StretchDirection="Both" Margin="0,-14,0,0">
        <Grid Margin="18" Width="1209" Height="596">
            <Grid.RowDefinitions>
                <RowDefinition Height="38*"/>
                <RowDefinition Height="27*"/>
                <RowDefinition Height="0*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="324*"/>
                <ColumnDefinition Width="322*"/>
                <ColumnDefinition Width="563*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: logo -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Height="1000" Width="99" Grid.RowSpan="3" Margin="0,-240,0,0" Grid.ColumnSpan="2">
                <Image Height="1000" Width="100"/>
            </StackPanel>

            <!-- RIGHT: login card -->
            <Border Grid.Column="2" CornerRadius="14" Background="White" Padding="28" Margin="18,10,66,18" Grid.RowSpan="2">
                <Border.Effect>
                    <DropShadowEffect Color="#666" ShadowDepth="6" BlurRadius="16" Opacity="0.25"/>
                </Border.Effect>

                <StackPanel Width="380">
                    <TextBlock Text="Cổng thông tin StarEnglish"
                               FontSize="22" FontWeight="Bold" Foreground="#FF7A33"
                               TextAlignment="Center" Margin="0,0,0,6"/>
                    <TextBlock Text="Đăng nhập để xem thông tin" Foreground="#444" TextAlignment="Center" Margin="0,0,0,18"/>

                    <!-- Username -->
                    <Grid Margin="0,0,0,10">
                        <Border CornerRadius="8" Background="#FBFBFB" BorderBrush="#E0E0E0" BorderThickness="1" Padding="8">
                            <TextBox x:Name="txtUsername"
                                     Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center"
                                     FontSize="14"/>
                        </Border>
                        <TextBlock Text="Tên tài khoản"
                                   Foreground="#9AA0A6" Margin="14,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False"/>
                    </Grid>

                    <!-- Password -->
                    <Grid Margin="0,0,0,8">
                        <Border CornerRadius="8" Background="#FBFBFB" BorderBrush="#E0E0E0" BorderThickness="1" Padding="8">
                            <PasswordBox x:Name="txtPassword"
                                         Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center"
                                         FontSize="14"/>
                        </Border>
                        <TextBlock Text="Mật khẩu"
                                   Foreground="#9AA0A6" Margin="14,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False"/>
                    </Grid>

                    <!-- Forgot password -->
                    <TextBlock Text="Quên mật khẩu?" Foreground="#2B6AD3" FontSize="12"
                               HorizontalAlignment="Right" Margin="0,0,0,10" Cursor="Hand"
                               MouseLeftButtonUp="ForgotPassword_Click"/>

                    <TextBlock Text="Chọn loại tài khoản:" Foreground="#1E9A8A" Margin="0,6,0,6" FontSize="14"/>

                    <StackPanel>
                        <RadioButton x:Name="rbStudent" Content="Học sinh - Phụ huynh" FontSize="15" Margin="0,2" IsChecked="True"/>
                        <RadioButton x:Name="rbTeacher" Content="Giáo viên - Nhân viên" FontSize="15" Margin="0,2"/>
                        <RadioButton x:Name="rbAdmin" Content="Quản lý" FontSize="15" Margin="0,2"/>
                    </StackPanel>

                    <!-- Login Button -->
                    <Button x:Name="btnLogin" Content="Đăng nhập" Height="44" Margin="0,18,0,0" Click="btnLogin_Click" FontSize="17" FontWeight="Bold">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FF7A33"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="#FF7A33"/>
                                <Setter Property="Padding" Value="10,4"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border CornerRadius="10" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.95"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Opacity" Value="0.85"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Background image -->
            <Image HorizontalAlignment="Left" Height="602" VerticalAlignment="Top" Width="701" Source="/z7036210694201_63d938153e736b3845a0879b23f5abd4.jpg" Stretch="Fill" Margin="-58,-9,0,0" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
        </Grid>
    </Viewbox>
</Window>
